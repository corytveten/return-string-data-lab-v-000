<%= link_to "New Product", new_product_path %>
<ul>
<% @products.each do |p| %>
    <li>
        <%= p.name %>
        <div id="<%= p.id %>"><%= truncate(p.description) %></div>
        <div id="invent-<%= p.id %>"></div>
        <button class="js-more" data-id="<%= p.id %>">More Info</button>
    </li>
<% end %>
</ul>
